<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="org.lejos.example-IDE">
    <target name="run-selected-file-in-src">
        <fail unless="run.class">Must set property 'run.class'</fail>
        <ant antfile="build.xml" target="uploadandrun">
            <property name="main.class" value="${run.class}"/>
        </ant>
    </target>
    <target name="compile-selected-files-in-src">
        <ant antfile="build.xml" target="compile"/>
    </target>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#compilesingle) -->
    <target name="compile-selected-files-in-src">
        <fail unless="files">Must set property 'files'</fail>
        <!-- TODO decide on and define some value for ${build.classes.dir} -->
        <mkdir dir="${build.classes.dir}"/>
        <javac destdir="${build.classes.dir}" includes="${files}" source="1.5" srcdir="src">
            <classpath path="../classes/lib/classes.jar:/group/teaching/sdp/sdp12/secure/lejos_nxj/lib/nxt/classes.jar:/group/teaching/sdp/sdp12/secure/lejos_nxj/lib/pc/pccomm.jar"/>
        </javac>
    </target>
</project>
